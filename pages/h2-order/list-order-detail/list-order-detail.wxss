/* pages/h2-order/list-order-detail/list-order-detail.wxss */

page {
  background-color: #f5f5f5;
}

/* card */

.top_card {
  padding: 30rpx 40rpx;
  background-color: #fff;
}

.top_card_top {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: solid 1rpx rgba(200, 200, 200, 0.1);
}

.top_card_top image {
  margin-right: 30rpx;
  border-radius: 10%;
  height: 60rpx;
  width: 60rpx;
}

.top_card_cen {
  display: flex;
  justify-content: space-between;
  position: relative;
}

.top_card_cen_bd {
  width: 100%;
  position: absolute;
  top: 45%;
  border-bottom: solid 1rpx #c8c8c8;
}

.top_card_btm {
  display: flex;
  justify-content: space-between;
}

.top_card_btm_name {
  padding-right: 30rpx;
  border-right: solid 1rpx #eee;
}

.img_phone {
  height: 30rpx;
  width: 30rpx;
}

/* tool bar */

.search_bar {
  display: flex;
  justify-content: space-around;
}

/* picker */

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #c8c8c8;
  background-color: #ececec;
  border-radius: 10rpx;
  height: 80rpx;
  width: 325rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* search */

.search {
  padding: 30rpx 30rpx 0;
  /* width: 325rpx; */
  width: 100%;
}

.search_p {
  text-align: center;
}

input {
  background-color: #ececec;
  padding: 10rpx 20rpx;
  height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
  box-sizing: border-box;
}

.arrow {
  position: absolute;
  top: 5%;
  right: 5%;
}

/* list */

.list {
  padding: 0 30rpx;
}

.list_card {
  background-color: #fff;
  border-radius: 5rpx;
}

.list_card_top {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: solid 1rpx #eee;
}

.list_card_avatar {
  height: 90rpx;
  width: 90rpx;
  border-radius: 10%;
  margin-right: 20rpx;
}

.list_card_l_top {
  display: flex;
  align-items: center;
}

.list_card_l image {
  height: 80rpx;
  width: 80rpx;
  margin-right: 10rpx;
  background: #eee;
}

.list_card_l_top_name {
  padding-right: 20rpx;
  margin-right: 20rpx;
  border-right: solid 1rpx #eee;
}

.list_card_l_top_name_phone {
  display: flex;
  align-items: center;
}

.list_card_l_btm {
  display: flex;
}

.list_card_l {
  display: flex;
  align-items: center;
}

.list_card_r {
  margin-left: 20rpx;
}

.link_arrow {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* card btm */

.list_card_btm {
  padding: 20rpx 30rpx;
}

.list_card_btm_top {
  display: flex;
  justify-content: space-between;
}

.list_card_btm_btm_btn {
  display: flex;
  justify-content: flex-end;
}

.list_card_btm_btm_remark {
  display: flex;
  justify-content: space-between;
}

.text_btn {
  width: 150rpx;
}

.list_card_btm_btm_remark {
  display: flex;
  justify-content: space-between;
}

.list_card_btm_btm_remark_time {
  margin-right: 20rpx;
}

/* divider */

.wux-divider--text-right:before {
  width: 100% !important;
}

.wux-divider--text-right:after {
  width: 100% !important;
}

.divider_n, .divider_r {
  padding: 0 30rpx;
}

.divider_r .wux-divider .wux-divider__text {
  color: #ff482c !important;
  font-weight: normal !important;
}

.divider_n .wux-divider .wux-divider__text {
  color: #c8c8c8 !important;
  font-weight: normal !important;
}

/* blank */

.blank {
  width: 20rpx;
}

.blank-l {
  margin-left: 20rpx;
}

/* modified */

.modified {
  color: #c8c8c8;
}
